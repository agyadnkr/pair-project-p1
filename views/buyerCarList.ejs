<%- include('./partials/header') %> 
<%- include('./partials/nav') %> 
<%- include('./partials/message') %> 

  <h1>Car List</h1><br><br>
  <a href="/?sortBy='year'">price</a>
  <a href="/?sortBy='price'">Price</a>

    <table border="1">
        <tr>
          <th>Brand</th>
          <th>Model</th>
          <!-- <th>Image</th> -->
          <th>Year</th>
          <th>Transmission</th>
          <th>Color</th>
          <th>price</th>
          <th>Description</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
    
        <% data.forEach(each => { %>
          <tr>
            <td><%= each.Brand.brandName %></td>
            <td><%= each.model %></td>
            <!-- <td><img src="<%= each.imageUrl %>" alt="car image"></td> -->
            <td><%= each.year %></td>
            <td><%= each.Detail.transmission %></td>
            <td><%= each.color %></td>
            <td><%= each.formatPrice %></td>
            <td><%= each.Detail.description %></td>
            <td><%= each.status %></td>
            <td>
              
              <% if(each.status === 'Available') { %>
                <a href="/user/<%= each.id %>/buy" >Buy</a>
                
              <% } %>

            </td>
          </tr>
          <% }) %>
      </table>  

</body>
</html>