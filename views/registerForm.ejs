<%- include('./partials/message') %> 
   
    
      <br><br>
      <h1>Register</h1><br><br>


      <form action="/register" method="post">

        
          <label>Username</label>
          <input type="text" placeholder="Ex. JohnDoe" name="username" value="<%= typeof username != 'undefined' ? username : null %>" class="border" ><br><br>
        

        
          <label>Password</label>
          <input type="password" name="password" placeholder="Make it hard, please" class="border"><br><br>
          
          <label>Retype Password</label>
          <input type="password" name="password2" placeholder="Hope you still remember" class="border"><br><br>
        
       
       
          <label >Email address</label>
          <input type="email" placeholder="Ex. johndoe@mail.com" name="email" value="<%= typeof email != 'undefined' ? email : null %>" class="border"><br><br>
      
      
          <label>Phone</label>
          <input type="number" placeholder="Ex. 811123456789" name="phone" value="<%= typeof phone != 'undefined' ? phone : null %>" class="border" ><br><br>
        
   
        <button type="submit">Submit</button>
      </form>

      <p>Have an Account? <a href="login">Login</a></p>
    


